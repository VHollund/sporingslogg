  <beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://cxf.apache.org/jaxws
    http://cxf.apache.org/schemas/jaxws.xsd
    http://cxf.apache.org/jaxrs
    http://cxf.apache.org/schemas/jaxrs.xsd
    ">        
  
    <!-- Forenklinger for lokal Jetty i forhold til JBoss. Database-context ligger i separate filer -->
        
    <!-- Ikke valider OIDC-tokens utover at de er encodet JSON sÃ¥ brukernavn kan hentes ut 
         BARE BRUK DENNE HVIS APP'EN STARTES MED DUMMY-ISSUER -->
    <!--bean id="oidcAuthenticate" class="no.nav.sporingslogg.oidc.OidcAuthenticateAcceptEverything"/-->
    
    <!-- Forenklet REST- og WS-API: ikke JAAS-innlogging, enklere rollesjekk -->	
    <bean id="dummyLoginInterceptor" class="no.nav.sporingslogg.web.jetty.EmulateLoginInterceptor"/>
    <bean id="loggController" class="no.nav.sporingslogg.restapi.LoggController"/>
    <jaxrs:server id="loggServer" address="/logg">
        <jaxrs:serviceBeans><ref bean="loggController" /></jaxrs:serviceBeans>
        <jaxrs:inInterceptors>
            <ref bean="dummyLoginInterceptor" />
        </jaxrs:inInterceptors>
        <jaxrs:providers>
           <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">
                <constructor-arg ref="customObjectMapper"/>
           </bean>
           <bean class="no.nav.sporingslogg.restapi.SecurityExceptionHandler"/>
           <bean class="no.nav.sporingslogg.restapi.IllegalArgumentExceptionHandler"/>
        </jaxrs:providers>
    </jaxrs:server>
</beans>
